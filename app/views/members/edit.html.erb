<h1 class="edit-title avant-garde-header"><%= @member.name %></h1>

<form action="<%= member_path(@member) %>" method="post">
	<input type="hidden" name="_method" value="put" />
	<%= render partial: "edit_form", locals: {member: @member} %>
</form>

<%= button_to "Remove User", { action: "destroy", id: @member.id }, method: :delete, data: { confirm: "Are you sure you want to delete #{@member.email} from S'UP? Their tally count of meetings with other team members will be deleted too." }, class: 'white-button button--block' %>